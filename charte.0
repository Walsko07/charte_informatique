        <div id="acceptationSection">
            <h2>Acceptation des Conditions :</h2>
            <div>
           <br><p id="Signature">Cette section est dédiée à votre signature de la Charte.</p> </br>

                <label for="accepterConditions">J'accepte les conditions de la Charte :</label>
                <input type="checkbox" id="accepterConditions">
            </div>
        </div>

        <div id="signatureSection">
            <canvas id="signatureCanvas" width="400" height="200"></canvas>
            <div id="buttonsContainer">
                <button id="validerBtn">Valider</button>
                <button id="resetBtn">Recommencer</button>
         </div>
        </div>

        <div>
            <label for="lieuInput">Fait à </label>
            <input type="text" id="lieuInput" placeholder="Lieu">
            <label for="dateInput"> le </label>
            <input type="text" id="dateInput" placeholder="Date">
        </div>

        <p id="SignatureText" class="SignatureText"></p>
        <p>Société "Vos Rêves"</p>
        <p>Signature du Responsable Informatique Monsieur Dupont:</p>
        <img id="signatureImg" src="Image_charte/signature_fixe.jpg" alt="Signature du Responsable Informatique">
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var canvas = document.getElementById('signatureCanvas');
            var context = canvas.getContext('2d');
            var isDrawing = false;
            var isSignatureValidated = false;

            canvas.addEventListener('mousedown', function (e) {
                if (!isSignatureValidated) {
                    isDrawing = true;
                    draw(e);
                }
            });

            canvas.addEventListener('mousemove', function (e) {
                if (isDrawing) {
                    draw(e);
                }
            });

            canvas.addEventListener('mouseup', function () {
                isDrawing = false;
                context.beginPath();
            });

            function draw(e) {
                if (!isSignatureValidated) {
                    context.lineWidth = 2;
                    context.lineCap = 'round';
                    context.strokeStyle = '#000';

                    context.lineTo(e.clientX - canvas.getBoundingClientRect().left, e.clientY - canvas.getBoundingClientRect().top);
                    context.stroke();
                    context.beginPath();
                    context.moveTo(e.clientX - canvas.getBoundingClientRect().left, e.clientY - canvas.getBoundingClientRect().top);
                }
            }

            var validerBtn = document.getElementById('validerBtn');
            validerBtn.addEventListener('click', function () {
                var accepterConditions = document.getElementById('accepterConditions');

                if (accepterConditions.checked) {
                    isSignatureValidated = true;
                    alert('Signature validée !');
                    // Désactiver les événements liés à la signature après validation
                    canvas.removeEventListener('mousedown');
                    canvas.removeEventListener('mousemove');
                    canvas.removeEventListener('mouseup');
                } else {
                    alert('Veuillez accepter les conditions de la Charte.');
                }
            });

            var resetBtn = document.getElementById('resetBtn');
            resetBtn.addEventListener('click', function () {
                if (!isSignatureValidated) {
                    context.clearRect(0, 0, canvas.width, canvas.height);
                }
            });

            var lieuInput = document.getElementById('lieuInput');
            var dateInput = document.getElementById('dateInput');
            var signatureText = document.getElementById('SignatureText');

            lieuInput.addEventListener('input', function () {
                signatureText.innerText = `Fait à ${lieuInput.value}, le ${dateInput.value}`;
            });

            dateInput.addEventListener('input', function () {
                signatureText.innerText = `Fait à ${lieuInput.value}, le ${dateInput.value}`;
            });


             var imprimerBtn = document.createElement('button');
        imprimerBtn.textContent = 'Imprimer la charte';
        imprimerBtn.id = 'imprimerBtn';
        imprimerBtn.addEventListener('click', function () {
            // Masquer le bouton imprimer une fois qu'il est pressé
            imprimerBtn.style.display = 'none';

            // Masquer le bouton Valider et Recommencer
            validerBtn.style.display = 'none';
            resetBtn.style.display = 'none';

            // Remplacer le texte "Fait à le" lors de l'impression
            var lieuInput = document.getElementById('lieuInput');
            var dateInput = document.getElementById('dateInput');
            var signatureText = document.getElementById('SignatureText');
            var originalText = signatureText.innerText;
            signatureText.innerText = `Fait à ${lieuInput.value}, le ${dateInput.value}`;

            // Afficher seulement le lieu et la date lors de l'impression
            var lieuDatePrint = document.createElement('p');
            lieuDatePrint.innerText = `${lieuInput.value}, le ${dateInput.value}`;
            lieuDatePrint.className = 'SignatureText';
            document.getElementById('container').appendChild(lieuDatePrint);

            // Appeler la fonction d'impression après un court délai pour permettre le rendu des modifications
            setTimeout(function () {
                window.print();
                // Restaurer le texte original après l'impression
                signatureText.innerText = originalText;
                // Supprimer l'élément ajouté après l'impression
                imprimerBtn.style.display = 'block';
                validerBtn.style.display = 'block';
                resetBtn.style.display = 'block';   
            }, 100);
        });


                document.getElementById('container').appendChild(document.createElement('br'));
                document.getElementById('container').appendChild(imprimerBtn);

        });
    </script>
</body>

